<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_round_shopping_cart_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/INVname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Material Name"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/INVspecification"
            android:text="Specifications"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_below="@+id/INVname"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/INVstock"
            android:text="Stock"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_below="@id/INVspecification"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/INVUnit"
            android:text="Unit"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_below="@id/INVstock"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/INVamount"
            android:text="Alloted amount"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_below="@id/INVUnit"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_below="@+id/INVamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnedit"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btndelete"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>